*&      Form  POSTING_ACT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
*      -->P_IT_POST_ACT  text
*      -->P_$GT_OUT_SKF  text
*----------------------------------------------------------------------*
FORM POSTING_ACT TABLES   P_POST STRUCTURE IT_POST_ACT
                 USING    F_SKF.

  DATA $FLAG(1).
  DATA LV_CONF_TEXT(50).
  DATA : FIRST_DAY TYPE SY-DATUM,
         LAST_DAY TYPE SY-DATUM.

  CONCATENATE SY-UNAME  SY-DATUM  SY-REPID
         INTO LV_CONF_TEXT SEPARATED BY '/'.

* Fill Object List
  __CLS IT_DOC_ITEMS.

  SORT P_POST BY PERIOD.

  LOOP AT P_POST.

    IT_DOC_ITEMS-STATKEYFIG = F_SKF.
    IT_DOC_ITEMS-STAT_QTY   = P_POST-COUNT.

* -> Alpha Numeric Conversion
    IT_DOC_ITEMS-REC_CCTR   = P_POST-CGROUP.
    CALL FUNCTION 'CONVERSION_EXIT_ALPHA_INPUT'
         EXPORTING
              INPUT  = IT_DOC_ITEMS-REC_CCTR
         IMPORTING
              OUTPUT = IT_DOC_ITEMS-REC_CCTR.
**// End of Mod.

    APPEND IT_DOC_ITEMS.

    AT END OF PERIOD.
      $FLAG = TRUE.
    ENDAT.
    CHECK $FLAG EQ TRUE.
    CLEAR $FLAG.

    CONCATENATE P_YEAR P_POST-PERIOD+1(2) '01' INTO FIRST_DAY.

    CALL FUNCTION 'LAST_DAY_OF_MONTHS'
         EXPORTING
              DAY_IN            = FIRST_DAY
         IMPORTING
              LAST_DAY_OF_MONTH = LAST_DAY.

* Init. Message TAB
    __CLS IT_RETURN.

* Fill Header DATA
    CLEAR WA_DOC_HEADER.
    WA_DOC_HEADER-CO_AREA       = P_KOKRS.
    WA_DOC_HEADER-DOCDATE       = LAST_DAY.
    WA_DOC_HEADER-POSTGDATE     = LAST_DAY.
    WA_DOC_HEADER-VERSION       = P_VERSN.                  "'000'.
    WA_DOC_HEADER-VARIANT       = 'SAP01'.
    WA_DOC_HEADER-DOC_HDR_TX    = LV_CONF_TEXT.
    WA_DOC_HEADER-USERNAME      = SY-UNAME.

* Call BAPI FM
    PERFORM CALL_POST_FM_ACT.

    IF P_TRUN = 'X'.
    ELSE.
      COMMIT WORK.
      CALL FUNCTION 'Z_FCO_MANAGEMENT_SKF'
           EXPORTING
                IM_PGMNO = SY-TCODE
                IM_KOKRS = P_KOKRS
                IM_GJAHR = P_YEAR
                IM_PERBL = P_POST-PERIOD
                IM_VERSN = P_VERSN.
    ENDIF.

    __CLS IT_DOC_ITEMS.

  ENDLOOP.


  IF P_TRUN = 'X'.
    MESSAGE S009(ZMCO) WITH '- TEST RUN'.
  ELSE.
    MESSAGE S009(ZMCO) WITH ''.
  ENDIF.

ENDFORM.                    " posting_act
